#!/usr/bin/env bash
# -ex:
# bail on errors and show debugging stuff
read -r -d '' HELP <<-'EOF'
For SOURCE_DIR, 
  
  collect metadata using BibID
  confirm directory name matches object name
  extract the file names from the XML
  compare XML file names with actual file names
  copy master TIFFs (with correct names to destination) to destination folder
  generate derivatives
  create manifest
  create TEI with new filenames and paths
  

EOF

################################################################################
### TEMPFILES
# From:
#   http://stackoverflow.com/questions/430078/shell-script-templates
# create a default tmp file name
tmp=${TMPDIR:-/tmp}/prog.$$
# delete any existing temp files
trap "rm -f $tmp.?; exit 1" 0 1 2 3 13 15
# then do
#   ...real work that creates temp files $tmp.1, $tmp.2, ...

################################################################################
#### USAGE AND ERRORS
COMMAND=`basename $0`
# Load basic functions; primarily messaging functions
# Rename file name here to match actual functions
source "`dirname $0`/op-functions"

# Note that LOGFILE is used by functions for log commands: log_message,
# log_warning, log_error, etc.
#
# replace log file with another value if you want
LOGFILE=LOG_${COMMAND}_`tstamp`.log

usage() {
   echo "Usage: $cmd SOURCE_DIR"
   echo ""
   echo "Prepare SOURCE_DIR for OPenn."
   echo ""
}

print_help() {
  echo "$HELP"
}

################################################################################
### OPTIONS
while getopts "h" opt; do
  case $opt in
    h)
      usage
      print_help
      exit 1
      ;;
    \?)
      echo "ERROR Invalid option: -$OPTARG" >&2
      echo ""
      usage
      exit 1
      ;;
  esac
done

shift $((OPTIND-1))


################################################################################
### THESCRIPT

SOURCE_DIR="$1"
if dir_exists "$SOURCE_DIR" SOURCE_DIR ; then
  message "Using SOURCE_DIR: $SOURCE_DIR"
else
  error "Error finding SOURCE_DIR"
fi

this_dir=`dirname $0`

BIBID=`./${this_dir}/op-get-bibid "$SOURCE_DIR"`
if [ $? -eq 0 ]; then
  message "Using ID: $BIBID"
fi


################################################################################
### EXIT
# http://stackoverflow.com/questions/430078/shell-script-templates
rm -f $tmp.?
trap 0
exit 0
